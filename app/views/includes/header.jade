.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle="collapse",data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/")
        img(src="/images/logo.png",width="20",height="20")
    .navbar-collapse.collapse(role="navigation")
      ul.nav.navbar-nav
        li.hidden-sm
          a(href="/") 首页
        li.dropdown
          a.dropdown-toggle(href="#",data-toggle="dropdown",role="button",aria-haspopup="true",aria-expanded="false") 后台
            span.caret
          ul.dropdown-menu

            li.dropdown-header 电影管理
            li
              a(href="/admin/movie/new") 电影录入
            li
              a(href="/admin/movie/list") 电影列表
            li.divider(role="sparator")

            li.dropdown-header 用户管理
            li
              a(href="#") 用户输入
            li
              a(href="/admin/user/list") 用户列表
            li.dropdown-header 分类管理
            li
              a(href="/admin/category/new") 电影分类录入
            li
              a(href="/admin/category/list") 电影分类列表
            li.divider(role="sparator")

      ul.nav.navbar-nav.navbar-right
        if user
          li
            a(href="#") 欢迎您: #{user.name}
          li
            a(href="/logout") 注销
        else
          li
            a(href="/signin") 登录
          li
            a(href="/signup") 注册

  